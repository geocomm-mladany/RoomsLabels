// Class 5: In beyond 1:1800, Out beyond None

var polyarea = $feature.Shape__Area;
var baseFontSizeNum = 1;
var scaleMultiplier = 0.01;
var minFontSizeNum = 2;
var maxFontSize = 10;
var finalFontSizeNum = baseFontSizeNum + (polyarea * scaleMultiplier);
var finalFontSizeNum = Min(Max(finalFontSizeNum, minFontSizeNum), maxFontSize);

var featnum = Upper($feature.featnum);

if (featnum != null) {
    return "<FNT size='" + finalFontSizeNum + "'>" + featnum + "</FNT>"
}
if (featnum == null) {
    return ("")
}
