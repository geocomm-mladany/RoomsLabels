// The following items should be changed for every class:
// Under "Placement" tab, should be Straight in Polygon, and try horizontal position first selected
// Font should be changed to regular (not bold) and Arial
// "Overrun" set to 0


// Class 1: In beyond None, Out beyond 1:500

var polyarea = $feature.Shape__Area;
var baseFontSizeNum = 7;
var baseFontSizeName = 3;
var scaleMultiplier = 0.05;
var minFontSizeNum = 2;
var minFontSizeName = 1;
var maxFontSize = 10;
var finalFontSizeNum = baseFontSizeNum + (polyarea * scaleMultiplier);
var finalFontSizeName = baseFontSizeName + (polyarea * scaleMultiplier);

finalFontSizeNum = Min(Max(finalFontSizeNum, minFontSizeNum), maxFontSize);
finalFontSizeName = Min(Max(finalFontSizeName, minFontSizeName), maxFontSize);

var featname = Upper($feature.featname);
var featnum = Upper($feature.featnum);
var type = $feature.type;

featname = Replace(Replace(featname, "CLASSROOM", " "), "ROOM", " ");

var featname_length = Count(featname);
var featnum_length =Count(featnum);
var combined_length = featname_length + featnum_length;


if ((type == "bathroom") || (type == "transition")) {
    if (featnum != null) {
        return "<FNT size='" + finalFontSizeNum + "'>" + featnum + "</FNT>";
    } else {
        return "";
    }
} else if ((combined_length * finalFontSizeName > polyArea) || (combined_length * finalFontSizeNum > polyArea)) {
    if (featnum != null) {
        return "<FNT size='" + finalFontSizeNum + "'>" + featnum + "</FNT>";
    } else {
        return "<FNT size='" + finalFontSizeName + "'>" + featname + "</FNT>";
    }
} else {
    if (featname != null && featnum != null && type != "corridor") {
        return "<FNT size='" + finalFontSizeNum + "'>" + featnum + "</FNT>\n<FNT size='" + finalFontSizeName + "'>" + featname + "</FNT>";
    } else if (type == "corridor") {
        return "<FNT size='" + finalFontSizeNum + "'>" + featnum + "</FNT> " + "<FNT size='" + finalFontSizeName + "'>" + featname + "</FNT>";
    } else if (featnum == null) {
        return "<FNT size='" + finalFontSizeName + "'>" + featname + "</FNT>";
    } else {
        return "<FNT size='" + finalFontSizeNum + "'>" + featnum + "</FNT>";
    }
}

